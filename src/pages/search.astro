---
import { getImage } from "astro:assets";

import Base from "@/layouts/Base.astro";
import SearchBar from "@/layouts/SearchBar";
import { getSinglePage } from "@/lib/contentParser.astro";

// Retrieve all articles
const posts = await getSinglePage("posts");

const importImage = async (image: string) => {
  try {
    return await import(`../assets${image}`);
  } catch (e) {
    return null;
  }
};

// List of items to search in
const searchList = await Promise.all(
  posts.map(async (item: any) => {
    item.data = Object.assign({}, item.data);

    if (item.data.image) {
      const imported = await importImage(item.data.image);

      if (!imported) {
        item.data.importedImage = item.data.image;
      } else {
        item.data.importedImage = await getImage({
          src: imported.default,
        });
      }
    }

    return {
      slug: item.slug,
      data: item.data,
      content: item.body,
    };
  }),
);
---

<Base title={`Search`}>
  <section class="section">
    <div class="container">
      <SearchBar client:load searchList={searchList} />
    </div>
  </section>
</Base>
